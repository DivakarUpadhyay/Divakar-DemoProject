    var Education1 = bannerObj.ReadImage(Model.csR_Section2[4].image);

    <section class="section remove_sect_bot_pad">
        <div class="box_series_con gray_bg skill_development">
            <div class="box_series__large box_align_right blue_2554e0_bg">
                <div class="box_tl_align">
                    <h2 class="left_line">Skill Development</h2>
                </div>
            </div>
            <div class="box_series__small">
                <img src="@skillDevelopmentImage" alt="@Model.csR_Section2[1].title">
            </div>
            <div class="box_series__large box_align_left">
                <div class="box_desc">
                    <h3>@Model.csR_Section2[1].title</h3>
                    @Html.Raw(Model.csR_Section2[1].short_Description)
                    <a href="@Url.Action("csrrlcpopup", "ICRA", new { Id = @Model.csR_Section2[1].csrBannersec2_Id })" class="rv_more bod_popup_link">Read More <i class="fas fa-arrow-right"></i></a>
                </div>
            </div>
        </div>

        <div class="box_series_con gray_bg women_entrepreneurship">
            <div class="box_series__large box_align_left">
                <div class="box_desc">
                    <h3>@Model.csR_Section2[2].title</h3>
                    @Html.Raw(Model.csR_Section2[2].short_Description)
                    <a href="@Url.Action("csrrlcpopup", "ICRA", new { Id = @Model.csR_Section2[2].csrBannersec2_Id })" class="rv_more bod_popup_link">Read More <i class="fas fa-arrow-right"></i></a>
                </div>
            </div>
            <div class="box_series__large box_align_right">
                <img src="@WomanEntrepreneurship" alt="@Model.csR_Section2[2].title">
            </div>
        </div>
    </section>

    <section class="section remove_sect_top_pad">
        <div class="education">
            <div class="edu_blurb">
                <img src="@Education" alt="@Model.csR_Section2[3].title" class="bg-Img" />
                <div>
                    <h2 class="left_line">Education</h2>
                    <div class="edu_blurb_det">
                        <div class="edu_title">@Model.csR_Section2[3].title</div>
                        @Html.Raw(Model.csR_Section2[3].short_Description)
                        <a href="@Url.Action("csrrlcpopup", "ICRA", new { Id = @Model.csR_Section2[3].csrBannersec2_Id })" class="rv_more white bod_popup_link">Read More <i class="fas fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>
            <div class="edu_blurb">
                <img src="@Education1" alt="Sponsorship Programmes" class="bg-Img" />
                <div>
                    <div class="edu_blurb_det">
                        <div class="edu_title">@Model.csR_Section2[4].title</div>
                        @Html.Raw(Model.csR_Section2[4].short_Description)
                        <a href="@Url.Action("csrrlcpopup", "ICRA", new { Id = @Model.csR_Section2[4].csrBannersec2_Id })" class="rv_more white bod_popup_link">Read More <i class="fas fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
