    var Environment = bannerObj.ReadImage(Model.csR_Section2[5].image);
    var Lake = bannerObj.ReadImage(Model.csR_Section2[6].image);
    <section class="section env_sustainability">
        <div class="container">
            <h2 class="left_line">@Model.csR_Section2[5].title</h2>
            @Html.Raw(Model.csR_Section2[5].short_Description)

        </div>
        <div class="box_series_con">
            <div class="box_series__large box_align_right">
                <img src="@Environment" alt="@Model.csR_Section2[5].title">
            </div>
            <div class="box_series__small">
                <div class="box_desc">
                    <h3>@Model.csR_Section2[6].title</h3>
                    @Html.Raw(Model.csR_Section2[6].short_Description)
                    <a href="@Url.Action("csrrlcpopup", "ICRA", new { Id = @Model.csR_Section2[6].csrBannersec2_Id })" class="rv_more bod_popup_link">Read More <i class="fas fa-arrow-right"></i></a>
                </div>
            </div>
            <div class="box_series__large box_align_left blue_2554e0_bg">
                <img src="@Lake" alt="@Model.csR_Section2[6].title">
