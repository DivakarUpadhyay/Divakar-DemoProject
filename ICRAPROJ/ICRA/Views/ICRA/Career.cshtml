<section class="section">
    <div class="apply_for_position">
        <div class="container">
            <h2 class="left_line">Apply For A Position</h2>
            <form>
                <!-- <div class="errMsg">dsfds</div> -->
                <div class="form_hld">
                    <div class="wp_controlers">
                        <div class="wp_control width_half">
                            <select class="selectBox">
                                <option>Job Position</option>
                                <option>Job 1</option>
                            </select>
                        </div>
                        <div class="wp_control width_half">
                            <select class="selectBox">
                                <option>Location</option>
                            </select>
                        </div>
                        <div class="wp_control width_oneforth">
                            <input type="text" placeholder="Name" class="textBox">
                        </div>
                        <div class="wp_control width_oneforth">
                            <input type="text" placeholder="Mobile Number" class="textBox">
                        </div>
                        <div class="wp_control width_oneforth">
                            <input type="text" placeholder="Email ID" class="textBox">
                        </div>
                    </div>
                    <div class="file-upload-wrapper" data-text="Upload Resume">
                        <input name="file-upload-field" type="file" class="file-upload-field" value="">
                    </div>
                    <div class="button"><span>Submit</span></div>
                </div>
            </form>
        </div>
    </div>
</section>

